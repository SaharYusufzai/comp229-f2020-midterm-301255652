<% include ../partials/header.ejs %>

  <!-- MAIN CONTENT -->
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1>
          <%= title %>
        </h1>

        <% for (let count=0; count < faculties.length; count++) { %>
          <form class="form" action="/faculties/edit/<%= faculties[count]._id %>" method="post">
            <div class="form-group">
              <label for="IdTextField">Faculty ID</label>
              <input type="text" class="form-control" id="IdTextField" placeholder="Faculty Id" name="Facultyid"
                value="<%= faculties[count].Facultyid %>" required />
            </div>

            <div class="form-group">
              <label for="NameTextField">Faculty Name</label>
              <input type="text" class="form-control" id="NameTextField" placeholder="Faculty Name" name="Facultyname"
                value="<%= faculties[count].Facultyname %>" required />
            </div>

            <div class="form-group">
              <label for="DeptTextField">Department</label>
              <input type="text" class="form-control" id="AuthorDeptTextField" placeholder="Department"
                name="Department" value="<%= faculties[count].Department %>" required />
            </div>

            <div class="form-group">
              <label for="SubTextField">Subject</label>
              <input type="text" class="form-control" id="SubTextField" placeholder="Subject" name="Subject"
                value="<%= faculties[count].Subject %>" required />
            </div>
            <br>
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-check-square-o"></i> Submit
            </button>
            <a href="/faculties" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            <br>
            <br>
            <hr>
          </form>
          <% } %>

      </div>
    </div>
  </div>

  <% include ../partials/footer.ejs %>